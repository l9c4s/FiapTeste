@page
@model FrontEnd.Fiap.Pages.Aluno.EditModel
@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded p-3">
        <h1 class="text-center mb-5">Editar Aluno</h1>
        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Id</label>
                <div class="col-sm-8">
                    <input readonly asp-for="@Model.AlunoDto.id" class="form-control-plaintext" />
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input asp-for="@Model.AlunoDto.Nome" class="form-control" />
                    <span asp-validation-for="AlunoDto.Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Usuario</label>
                <div class="col-sm-8">
                    <input asp-for="@Model.AlunoDto.Usuario" class="form-control" />
                    <span asp-validation-for="AlunoDto.Usuario" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Senha</label>
                <div class="col-sm-8">
                    <input asp-for="@Model.AlunoDto.Senha" class="form-control" />
                    <span asp-validation-for="AlunoDto.Senha" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="@Model.AlunoDto.Ativo"></label>
                <div class="col-sm-8">
                    <select asp-for="@Model.AlunoDto.Ativo" class="form-control">
                        <option value="1">Ativo</option>
                        <option value="0">Inativo</option>
                    </select>
                </div>
            </div>


            <div class="row mb-3">
                <div class="offset-md-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">
                        Editar
                    </button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Aluno/index" role="button">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>
