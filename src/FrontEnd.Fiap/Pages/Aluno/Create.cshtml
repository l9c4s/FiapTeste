@page
@model FrontEnd.Fiap.Pages.Aluno.CreateModel
@{
    ViewData["Title"] = "Create";
}





<div class="row">
    <div class="col-md-8 mx-auto rounded p-3">
        <h1 class="text-center mb-5">Novo Aluno</h1>
        <form method="post" enctype="multipart/form-data">


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nome</label>
                <div class="col-sm-8">
                    <input asp-for="AlunoDTOGG.Nome" class="form-control" />
                    <span asp-validation-for="AlunoDTOGG.Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Usuario</label>
                <div class="col-sm-8">
                    <input asp-for="AlunoDTOGG.Usuario" class="form-control" />
                    <span asp-validation-for="AlunoDTOGG.Usuario" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Senha</label>
                <div class="col-sm-8">
                    <input asp-for="AlunoDTOGG.Senha" class="form-control" />
                    <span asp-validation-for="AlunoDTOGG.Senha" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <div class="offset-md-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">
                       Salvar
                    </button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Aluno/index" role="button">Voltar </a>
                </div>
            </div>
        </form>
    </div>
</div>